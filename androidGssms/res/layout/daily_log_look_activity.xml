<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cbj3" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="logfh"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="工作日志"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="45dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="20.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摘要:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />

                <EditText
                    android:id="@+id/daily_log_look_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:maxLength="50" 
                   />
            </LinearLayout>

         <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="20.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属网格:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />

               <Button
                    android:id="@+id/daily_log_look_sswg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:textSize="16.0dip" >
                </Button>

            </LinearLayout>   

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="20.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作类型:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />

                <Button
                    android:id="@+id/daily_log_look_rzlx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:textSize="16.0dip" >
                </Button>
            </LinearLayout>
            <!--  -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="20.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作时间:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />
                <Button
                    android:id="@+id/daily_log_look_gzsj_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text" 
                    android:textSize="16.0dip">
                </Button>
                
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="10.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日志内容:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />

                <EditText
                    android:id="@+id/daily_log_look_rznr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:maxLength="2000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0px"
                android:layout_marginRight="15.0px"
                android:layout_marginTop="10.0px"
                android:background="@drawable/layoutbg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注:"
                    android:textColor="#ff3f3f3f"
                    android:textSize="16.0dip" />

                <EditText
                    android:id="@+id/daily_log_look_bz"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:maxLength="200" />
            </LinearLayout>

           
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:orientation="vertical" >
   <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="daily_log_xg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_xg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:scaleType="matrix"
                    android:onClick="daily_log_xg"
                    android:src="@drawable/tab1_gpdb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="#fff"
                    android:textSize="12sp" 
                    android:onClick="daily_log_xg"/>
            </LinearLayout>
 <LinearLayout
                 android:id="@+id/message_more_linearlayout1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1"
              	android:onClick="daily_log_more_delete"
              	   >               	
                <ImageView
            		android:id="@+id/img_friends"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:clickable="true"
        			android:onClick="daily_log_more_delete"
        			android:src="@drawable/tab1_delete"  />
                <TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="删除"
            		android:textColor="#fff"
            		android:textSize="12sp" 
            		android:onClick="daily_log_more_delete"/>                
        	 </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="logfh"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="logfh"
                    android:scaleType="matrix"
                    android:src="@drawable/sjsb_qx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="logfh"
                    android:text="返回"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>